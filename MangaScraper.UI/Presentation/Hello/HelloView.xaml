<UserControl x:Class="MangaScraper.UI.Presentation.Hello.HelloView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:local="clr-namespace:MangaScraper.UI.Presentation.Hello"
             mc:Ignorable="d" 
            >
  <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
    <TextBlock Text="This is the view for "/>
    <TextBlock x:Name="DisplayName" />
    <StackPanel Orientation="Horizontal">
      <Button
        Content="Start Indexing"
        Height="28"
        cal:Message.Attach="Start()"
        Grid.Row="0" Grid.Column="0" />
      <Button
        Content="Stop Indexing"
        Height="28"
        cal:Message.Attach="Stop()"
        Grid.Row="0" Grid.Column="0" />
    </StackPanel>
    <TextBlock Text="." />
    <TextBlock x:Name="Context" Width="300px"/>
    <ProgressBar Width="300px" Value="{Binding Path=Progress}" Maximum="1"></ProgressBar>
  </StackPanel>
</UserControl>
